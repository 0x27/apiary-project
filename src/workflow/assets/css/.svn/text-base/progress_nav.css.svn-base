body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,form,fieldset,input,textarea,p,blockquote,th,td{margin:0;padding:0;} 
table{border-collapse:collapse;border-spacing:0;} 
fieldset,img{border:0;} 
address,caption,cite,code,dfn,em,th,var{font-style:normal;font-weight:normal;} 
ul{list-style:none;} 
caption,th{text-align:left;} 
h1,h2,h3,h4,h5,h6{font-size:100%;}
abbr,acronym{border:0;} 
a,img{outline: none;}

.sub_nav {
	position: relative;
	_width: 960px;
	width: auto;
	height: 36px;
	margin: 0 auto;
	background: url(../img/navbar_segment.gif) repeat left bottom;
	}	
	
.sub_nav ul.breadcrumbs li.tail {
	position: relative;
	margin-top:2px;
	height: 36px;
	width:auto;
	float:right;
	background-color: #ff0;
	background: url(../img/progress_bar_end.gif) no-repeat right top;
}	

.sub_nav ul li {
    cursor:pointer;
	float: left;
	}	
.sub_nav ul li a {
    cursor:pointer;
	display: block;
	float: left;
	position: relative;	
	height: 36px;
	padding: 0 10px;
	color: #777;	
	font: bold 13px/36px Arial, Helvetica, sans-serif;	
	text-shadow: #fff 0px 1px 1px;	
	}
	
.sub_nav ul li a span {
	display: none;
	position: absolute;
	right: 0px;
	top: 0px;
	width: 4px;
	height: 36px;
	}
	
	.sub_nav ul li a:hover {
	color: #3789cc;
	cursor: pointer;
	text-shadow: #fff 0px 1px 1px;
	}		
	
/* Breadcrumbs */

.sub_nav ul.breadcrumbs li{
	position: relative;
	height: 34px;
	line-height: 32px;
	margin: 2px 0px 0 0;
	padding: 0 20px 0 13px;
	font-size: 14px;
	text-transform: uppercase;
	font-weight: bold;
	color: #777;
	font-family: Helvetica, Arial, Verdana, sans-serif;

	text-shadow: #fff 0px 1px 1px;
}
.sub_nav ul.breadcrumbs li.disabled{
	color: #bbb;
	cursor: default;
}
	
.sub_nav ul.breadcrumbs li.step {
	background: url(../img/progress_bar_active.gif) no-repeat right top;
}
	
.sub_nav ul.breadcrumbs li.info{
	background: url(../img/nav_bar_active.gif) no-repeat right top;
	float:right;
}

.sub_nav ul.breadcrumbs li.info.last{
	background: url(../img/navbar_segment.gif) no-repeat right top;
	float:right;
}

.sub_nav ul.breadcrumbs li.skip{
	width: 0px;
	background: url(../img/navbar_segment.gif) no-repeat right top;
}

.sub_nav ul.breadcrumbs li:hover {
    cursor:pointer;
	}	
.sub_nav ul.breadcrumbs li span {
	display: none;
	position: absolute;
	left: -1px;
	top: 0px;
	width: 8px;	
	height: 34px;
	background: url(../img/progress_bar_tail.gif) no-repeat left top;
	}
.sub_nav ul.breadcrumbs li.first span {
	display: block;
	background-image: url(../img/progress_bar_first.gif);
	}
.step3 .sub_nav ul.breadcrumbs li.first span {
	display: block;
	background-image: url(../img/progress_bar_first.gif);
	}
.step3 .sub_nav ul.breadcrumbs li.step3 span,
.step2 .sub_nav ul.breadcrumbs li.step2 span {
	display: block;
	}	
.step1 .sub_nav ul.breadcrumbs li.step1.first span,
.step2 .sub_nav ul.breadcrumbs li.step2.first span,
.select_a_plan .sub_nav ul.breadcrumbs li.select_a_plan.first span  {
	background-position: 0px -34px;
	}
.step1 .sub_nav ul.breadcrumbs li.step1,
.step2 .sub_nav ul.breadcrumbs li.step2,
.step3 .sub_nav ul.breadcrumbs li.step3{
	margin-left: -7px;
	padding-left: 21px;
	background-position: right bottom;
	color: #fff;
	text-shadow: #333 0px 1px 1px;
	}
	
.step1 .sub_nav ul.breadcrumbs li.step1.first,
.step2 .sub_nav ul.breadcrumbs li.step2.first,
.step3 .sub_nav ul.breadcrumbs li.step3.first{
    cursor:pointer;
	margin-left: 0;
	padding-left: 15px;
}
	
.step1 .sub_nav ul.breadcrumbs li.step1.disabled,
.step2 .sub_nav ul.breadcrumbs li.step2.disabled,
.step3 .sub_nav ul.breadcrumbs li.step3.disabled{
	color: #888;
}
	